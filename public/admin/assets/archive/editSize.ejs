<%-include('../partials/adminPartials/adminHeader')-%>

<div class="col-xxl">
    <div class="card mb-4">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Basic Layout</h5>
        <small class="text-muted float-end">Default label</small>
      </div>
      <div class="card-body">
        <form id="addSizeForm" action="/admin/editProductSize/<%= data._id %>" method="POST">
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="newSize">Size</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" value="<%= data.size %>" name="newSize" id="newSize" placeholder="enter size" />
            </div>
          </div>
          
          <div class="row justify-content-end">
            <div class="col-sm-2">
              <button type="submit" class="btn btn-primary ">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

<%-include('../partials/adminPartials/adminFooter')-%>