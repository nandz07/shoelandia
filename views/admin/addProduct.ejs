<%-include('../partials/adminPartials/adminHeader')-%>

<% if(message){
    %>
    <div class="alert alert-<%= status %> alert-dismissible col-sm-12" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  
    <%
  } %>

<div class="col-xxl">
    <div class="card mb-4">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Add product</h5>
        <small class="text-muted float-end">enter new product</small>
      </div>
      <div class="card-body">
        <form action="/admin/addproduct" method="POST" id="productForm" enctype="multipart/form-data" >
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label" for="productName">Name</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="productName" id="productName" placeholder="Enter product name" required/>
              </div>
            </div>
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label" for="productDescription">Description</label>
              <div class="col-sm-10">
                <textarea id="productDescription" name="productDescription" class="form-control" placeholder="This is a walking shoe...." aria-label="This is a walking shoe...." aria-describedby="basic-icon-default-message2"></textarea>
              </div>
            </div>
            <div class="row mb-3">
              <% if(category && category.length > 0){ %>
              <label class="col-sm-2 col-form-label" for="productCategory">Product Category</label>
              <div class="dropdown col-sm-4">
                <select class="form-select" id="productCategory" name="productCategory" aria-label="Default select example">
                  <option selected value="">Select a category</option>
                  <% category.forEach((row, index) => { %>
                  <option value="<%= row.categoryName %>"><%= row.categoryName %></option>
                  <% }) %>
                </select>
              </div>
              <% } %>
              <label class="col-sm-2 col-form-label" for="productStock">Stock</label>
              <div class="col-sm-4">
                <input type="number" class="form-control" name="productStock" value="" id="productStock" placeholder="0" min="0"/>
              </div>
            </div>
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label" for="productPrice">Price</label>
              <div class="col-sm-4">
                <input type="number" class="form-control" name="productPrice" id="productPrice" value="" placeholder="0" min="0"/>
              </div>
              <label for="productImage" class="col-sm-2 col-form-label">Select image(s) </label>
              <div class="col-sm-4">
                <input type="file" class="form-control" name="image" id="productImage" aria-describedby="emailHelp" multiple required/>
              </div>
            </div>
            
            <div class="row justify-content-end">
              <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </form>
          
      </div>
    </div>
  </div>

<%-include('../partials/adminPartials/adminFooter')-%>