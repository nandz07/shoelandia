                                        <input type="text" id="categoryName" name="categoryName" class="form-control"
                                            placeholder="Enter Name" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <label class="col-sm-2 col-form-label"
