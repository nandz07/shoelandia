<%-include('../partials/adminPartials/adminHeader')-%>

<div class="col-xxl">
    <div class="card mb-4">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Add product</h5>
        <small class="text-muted float-end">enter new product</small>
      </div>
      <div class="card-body">
        <form action="/admin/addproduct" method="POST" id="productForm" enctype="multipart/form-data">
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="productName">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="productName" id="productName" placeholder="Enter product name" required/>
            </div>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="productDescription">Description</label>
            <div class="col-sm-10">
              <textarea
                id="productDescription"
                name="productDescription"
                class="form-control"
                placeholder="This is a walking shoe...."
                aria-label="This is a walking shoe...."
                aria-describedby="basic-icon-default-message2"
              ></textarea>
            </div>
          </div>
          <div class="row mb-3">
              <% if(size!=''){ %>
                <label class="col-sm-2 col-form-label" for="basic-default-company">Size</label>
                <div class="dropdown col-sm-4">
                  <button class="btn btn-light dropdown-toggle" type="button" id="productSizeButton" data-bs-toggle="dropdown" aria-expanded="false">
                    Select Size
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="productSizeButton" name="productSizeUl" id="productSize">
                    <% size.forEach((row, index) => { %>
                      <li class="m-2">
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" value="<%= row.size %>" id="sizeCheckbox" name="productSize">
                          <label class="form-check-label" for="sizeCheckbox"><%= row.size %></label>
                        </div>
                      </li>
                    <% }) %>
                  </ul>
                </div>
              <% } %>
            <% if(category!=''){ %>
            <label class="col-sm-2 col-form-label" for="basic-default-company">product Category</label>
            <div class="dropdown col-sm-4">
              <select class="form-select" id="producrtCategory" name="producrtCategory" aria-label="Default select example">
                <option selected value="">select a category</option>
                <% category.forEach((row, index) => { %>
                <option value="<%= row.categoryName%>"><%= row.categoryName%></option>
                <% }) %>
              </select>
            </div>
            <% } %>
          </div>
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label" for="productPrice">Price</label>
            <div class="col-sm-4">
              <input type="number" class="form-control" name="productPrice" id="productPrice" value="0" placeholder="0" min="0"/>
            </div>
            <label class="col-sm-2 col-form-label" for="productStock">Stock</label>
            <div class="col-sm-4">
              <input type="number" class="form-control" name="productStock" value="0" id="productStock" placeholder="0" min="0"/>
            </div>
          </div>
          <div class="row mb-3">
            
  
            <label class="col-sm-2 col-form-label" for="productDis">discount in %</label>
            <div class="col-sm-4">
              <input type="number" class="form-control" name="productDis" id="productDis" value="0" placeholder="0" min="0" max="100"/>
            </div>

              <label for="exampleInputEmail1" class="col-sm-2 col-form-label">Select image upto 3</label>
              <div class="col-sm-4">
              <!-- <input type="file" class="form-control" name="image"  multiple required> -->
              <input type="file" class="form-control" name="image" aria-describedby="emailHelp">
                </div>
          </div>
          
          
          <div class="row justify-content-end">
            <div class="col-sm-2">
              <button type="submit" class="btn btn-primary ">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

<%-include('../partials/adminPartials/adminFooter')-%>