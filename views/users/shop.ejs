	</section>
	<!-- End Banner Area -->
	<div class="container">
		<div class="row">
			<div class="col-xl-3 col-lg-4 col-md-5">
				<div class="sidebar-categories">
                    <% if(search){%>
                        <input type="text" id="myInput" placeholder="Search.." class="form-control mb-2 mt-2" value="<%= search %>" onkeyup="searchFunction()" list="productList">
                        <% }else{%>
