<!--================Single Product Area =================-->
<div class="product_image_area mb-5">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-6">
                <!-- <div class="s_Product_carousel"> -->
                    <img src="/productImages/<%= product.image[0] %>" width="500px" class="xzoom" xriginal="/productImages/<%= product.image[0] %>">
                    <div class="single-prd-item">
                        <div class="col mt-2 ml-0 d-flex align-items-center justify-content-start">
                    <% product.image.forEach((element)=> { %>
                        <!-- <img class="img-fluid" src="/productImages/<-%= element %>" alt=""> -->
                        <div class="xzoom-thumbs">
                            <a href="/productImages/<%= element %>">
                                <img class="xzoom-gallery" src="/productImages/<%= element %>" xprevies="/productImages/<%= element %>">
                            </a>
                        </div>
                        <% }); %>
                    </div>
                    </div>
                <!-- </div> -->
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    <h3><%= product.productName %></h3>
                    <h2>â‚¹ <%= product.price %></h2>
                    <ul class="list">
                        <li><a class="active" href="#"><span>Category</span> : <%= product.category.categoryName %></a></li>
                        <li><a href="#"><span>Availibility</span> :
                            <% if(product.stockQuantity > 0) {%>
                            In Stock
                                <% }else{ %>
                                    out of stock
                                    <% } %>
                        </a></li>
                    </ul>
                    <p>&nbsp&nbsp&nbsp&nbsp<%= product.description%> <br>&nbsp&nbsp&nbsp&nbsp<%= product.category.categoryDescription %></p>
                    <div class="card_area d-flex align-items-center">
                        <a class="primary-btn text-white" id="addToCart" onclick="addToCart('<%= product._id %>')" >Add to Cart</a>
                        <a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--================End Single Product Area =================-->




